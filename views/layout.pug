doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title || 'Admin Dashboard'}

    // Fonts
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap")

    // Bootstrap
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")

    // Icons
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")

    // Custom Admin CSS
    link(rel="stylesheet" href="/css/admin.css")

    script(src="https://cdn.jsdelivr.net/npm/chart.js")

  body

    // Page wrapper for full-height layout
    .page-wrapper.d-flex.flex-column.min-vh-100

      // Header (hidden on login)
      if currentRoute !== 'login'
        nav.navbar.navbar-expand-lg.navbar-dark.bg-success.shadow-sm
          .container-fluid
            a.navbar-brand(href="/admin") 
              i.fas.fa-user-shield.me-2
              | Admin Dashboard

            button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
              span.navbar-toggler-icon

            #navbarNav.collapse.navbar-collapse
              ul.navbar-nav.me-auto
                li.nav-item
                  a.nav-link(href="/admin") Home
                li.nav-item
                  a.nav-link(href="/admin/projects") Projects
                li.nav-item
                  a.nav-link(href="/admin/skills") Skills
                li.nav-item
                  a.nav-link(href="/admin/tools") Tools
                li.nav-item
                  a.nav-link(href="/admin/certifications") Certifications
                li.nav-item
                  a.nav-link(href="/admin/Resume") Resume
                li.nav-item
                  a.nav-link(href="/admin/contact") Contact Info
                li.nav-item
                  a.nav-link(href="/admin/social") Social Links

              a.btn.btn-outline-light(href="/logout")
                i.fas.fa-sign-out-alt.me-1
                | Logout

      // MAIN CONTENT (automatically grows)
      main.flex-grow-1
        .container.mt-4
          block content


      // Footer (hidden on login)
      if currentRoute !== 'login'
        footer.bg-dark.text-light.mt-5.py-3.text-center
          p.mb-1 © #{new Date().getFullYear()} Admin Panel — Ankit Kumar
            | 

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
